{
  "manifest_version": 2,
  "name": "ES6 Resurrector",
  "version": "1.0",
  "description": "The best extension for my friends",

  "icons":{
    "48" : "img/icon48.png",
    "16" : "img/icon16.png"
  },


  "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "notifications"
  ],

  "content_scripts": [
  {
    "matches": ["https://*/*"],
    "run_at": "document_start",
    "css": ["css/style.css"],
    "js": ["js/es6-shim-polyfill.es5.js", "js/web-streams-polyfill.es6.min.js", "content.js"]
  }
  ],

  "web_accessible_resources": [
      "toolbar.html",
      "css/extension_style.css"
  ]

}

